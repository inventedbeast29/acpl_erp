<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Queryy</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- jQuery (required for Select2) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 80vw;
      max-height:1200px;
      margin-top: 70px !important;
    }
    .card-header {
      background-color: #007bff;
      color: white;
    }
    .form-control, .form-select {
      border-radius: 0.375rem;
    }
    #homebtn{
      position: relative;
      top: 30px;
      left: 20px;
    }
    #formdetail{
      background-color: rgba(49, 43, 43, 0.059);
    }

  </style>
</head>
<body>
  <a href="/purchase_dashboard">
    <button class="btn btn-primary m-3" id="homebtn">
      <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
    </button>
  </a>
<div class="container">
  <div class="card shadow">
    <div class="card-header text-center">
      <h4>Purchase Query</h4>
    </div>
    <div class="card-body">
      <form>
        <div class="row mb-3">
          <!-- Customer Name Dropdown -->
            <div class="col-md-4">
              <label for="serial_no" class="form-label">Ref. No</label>
              <input type="text" class="form-control" value="<%= result.serial_no %>" disabled>
            </div>

          <div class="col-md-4">
            <label for="customerName" class="form-label">Customer Name</label>
            <input type="text" class="form-control" name="cust_name" disabled value="<%=result.customer_name%>">
            
              <!-- Add more customers dynamically if needed -->
          </div>

          <!-- Type of Work Dropdown -->
          <div class="col-md-4">
            <label for="workType" class="form-label">Application Type</label>
            <input type="text" class="form-control" name="worktype" disabled value="<%=result.work_type%>">
          </div>
        </div>


        <div class="row mb-3">
          <div class="col-md-6">
          <label for="workType" class="form-label">Form Name </label>
          <input type="text" class="form-control" name="cust_name" disabled value="<%= result.sub_work %>">
        </div>

          <!-- Date of Query -->
          <div class="col-md-6">
            <label for="queryDate" class="form-label">Date of Query</label>
            <input type="text" class="form-control" id="queryDate" name="querydate"disabled value="<%=new Date(result.query_date).toLocaleDateString('en-GB') %>">
          </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="license_detail" class="form-label">License Details</label>
              <input type="text" class="form-control" name="license_detail" disabled value="<%=result.item_detail %>">
            </div>
            <div class="col-md-6">
              <label for="govt_branch" class="form-label">Govt Department</label>
              <input type="text" class="form-control" value="<%= result.govt_branch %>" disabled>
            </div>
          </div>
          <!-- Assigned To Dropdown -->
          <div class="row mb-3">
          <div class="col-md-6">
            <label for="assignedTo" class="form-label">Assigned To</label>
            <input type="text" class="form-control" name="Assigned" disabled value="<%=result.assigned_to%>">

          </div>

          <!-- Quotation No -->
          <div class="col-md-4">
            <label for="sts" class="form-label">Query Status</label>
            <input type="text" class="form-control" name="sts" disabled value="<%= result.query_sts %>">
          </div>
        </div>
      </div>
          <!-- Date of Quotation Sent -->
           <div class="row mb-3">
          <div class="col-md-6">
            <label for="queryclose_date" class="form-label" >Expected Close Date</label>
            <input type="text" class="form-control" id="queryclose_date" name="queryclose_date" disabled value="<%=new Date(result.queryclose_date).toLocaleDateString('en-GB') %>">
          </div>

        <div class="col-md-6">
          <label for="remarks" class="form-label">Remarks/Notes</label>
          <textarea rows="2"class="form-control" id="remarks" name="remarks" disabled><%= result.remarks %> </textarea>        
      </div>
      </div> 
      </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>

  $(document).ready(function() {
    $('.select2').select2();
  });


</script>
</body>
</html>
