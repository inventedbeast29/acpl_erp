<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Sales Order Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
/>
</head>
<body class="p-4 bg-light">

  <div class="container bg-white p-4 shadow rounded">
        <a class="btn btn-primary" href="/main">Back To Home</a>
    <h2 class="mb-4 text-center">Sales Order Dashboard</h2>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
        
          <th>Sales Invoice No</th>
          <th>Customer Name</th>
          <th>Quotation No</th>
          <th>Total Amount</th>
          <th>Created On</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach(function(sales,index){ %>
          <% const createdOn=new Date(sales.created_at).toLocaleString('en-GB').split(",") %>
          <!--- console.log(createdOn[0])---> 
          <tr>
            <td><%=sales.invoice_no  %></td>
            <td><%=sales.cust_name  %></td>
            <td><a href="quotation_dashboard" style="text-decoration: none;"><%=sales.quotation_no %> </a> </td>
            <td><%= sales.total_amt %></td>
            <td><%=createdOn[0] %></td>
            <td>  <a href="/view_invoice/<%= sales.invoice_no %>" class="btn btn-sm btn-info">
              <i class="fas fa-eye"></i> View
            </a>
            <a href="/record_payment/<%= sales.invoice_no %>" class="btn btn-sm btn-success">
              <i class="fas fa-credit-card"></i> Record Payment
            </a></td>
       <% }) %>
       </tr>
      </tbody>
    </table>
  </div>

</body>
</html>
