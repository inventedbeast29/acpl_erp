<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Govt process report</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .card {
      transition: transform 0.2s ease-in-out;
    }
    .card:hover {
      transform: translateY(-5px);
    }
  </style>
</head>
<body>

<div class="container mt-5">
  <h3 class="mb-4 text-center">Government Application Process Dashboard</h3>
  <div class="row g-4">
    <% employees.forEach(emp => { %>
      <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
          <div class="card-body text-center">
            <i class="bi bi-person-circle fs-1 text-primary"></i>
            <h5 class="card-title mt-2 emp_name"><%= emp.submitted_by %></h5>
            <p class="text-muted mb-1">Pending Applications</p>
            <h4 class="text-danger fw-bold pending-count"></h4>
             <p class="text-muted mb-1">Completed Applications</p>
            <h5 class="text-success fw-bold completed-count"></h5>
            <p class="text-warning text-muted mb-1">Total Application</p>
            <h5 class="totalapp text-secondary fw-bold"></h5>
            <button  class="btn btn-info mt-3 get-info">Get Info</button>
           
            <a href="/employee/<%=emp.id %>/applications" class="btn btn-outline-primary mt-3">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
   document.addEventListener("DOMContentLoaded", function () {
  const buttons = document.querySelectorAll(".get-info");

  buttons.forEach(button => {
    button.addEventListener("click", async function () {
      const card = this.closest(".card-body");
      const name = card.querySelector(".emp_name").textContent.trim();
      const pendingEl = card.querySelector(".pending-count");
      const completedEl=card.querySelector(".completed-count");
      const totalvalue=card.querySelector(".totalapp")
           // console.log(name);
      
        const response = await fetch("/getPending", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ name })

        })
        const result=await response.json();
        console.log("count",result)
        pendingEl.textContent=result.pendingcount;
        completedEl.textContent=result.completedcount.completed;
        totalvalue.textContent=result.totalcount.total;
        })})})
</script>

</body>
</html>
