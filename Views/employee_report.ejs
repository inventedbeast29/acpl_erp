<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Govt Process Report</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #f8f9fa;
    }
      .back{
        position: absolute;
        top: 5vh;

      }
    .table-hover tbody tr:hover {
      background-color: #f1f1f1;
    }

    .btn-info, .btn-outline-primary {
      margin-right: 0.5rem;
    }
  </style>
</head>
<body>

<div class="container mt-5">
  <h3 class="mb-4 text-center">Government Application Process Report</h3>
  <a href="/main" class="btn btn-primary back">Back To Home</a>

  <div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-primary">
        <tr>
          <th>Employee</th>
          <th>Pending Applications</th>
          <th>Completed Applications</th>
          <th>Total Applications</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach(emp => { %>
          <tr>
            <td class="emp_name"><i class="bi bi-person-circle text-primary me-2"></i><%= emp.submitted_by %></td>
            <td class="text-danger fw-bold pending-count"></td>
            <td class="text-success fw-bold completed-count"></td>
            <td class="text-secondary fw-bold totalapp"></td>
            <td>
              <button class="btn btn-info btn-sm get-info">Get Info</button>
              <a href="/employee/applications/<%= emp.submitted_by %>" class="btn btn-outline-primary btn-sm">Get agewise details></a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".get-info");

    buttons.forEach(button => {
      button.addEventListener("click", async function () {
        const row = this.closest("tr");
        const name = row.querySelector(".emp_name").textContent.trim();
        const pendingEl = row.querySelector(".pending-count");
        const completedEl = row.querySelector(".completed-count");
        const totalEl = row.querySelector(".totalapp");

        const response = await fetch("/getPending", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ name })
        });

        const result = await response.json();
        console.log("count", result);

        pendingEl.textContent = result.pendingcount;
        completedEl.textContent = result.completedcount.completed;
        totalEl.textContent = result.totalcount.total;
      });
    });
  });
</script>

</body>
</html>
